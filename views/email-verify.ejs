<% include ./partial/header.ejs %>
<body style="font-family: 'Baloo 2', cursive;">
	<div class="navbar-fixed">
		<nav class="purple darken-3">
			<div class="nav-wrapper">
				<a href="#!" class="brand-logo center">Mr. Notes<img src="/img/fav2.png" class="left logo-fav"></a>
			</div>
		  </nav>
	</div>
	<br>
    <div class="container">
        <div class="section">
            <!-- <div class="container"> -->
                <h3 class="purple-text" style="text-align: center"><b>Login</b></h3>
                <div class="divider"></div>
                <div class="section">
                    <div class="row">
                        <form class="col s12" action="/email/verification/<%= (verifyCode) %>" method="post">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate" name="email" required />
                                <label for="email">Email</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="pswrd" type="password" class="validate" name="password" required />
                                <label for="pswrd">Password</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <button class="waves-effect waves-light btn-large purple" type="submit"><i class="material-icons left">person</i><span style="font-family: 'Baloo 2', cursive;">Login</span></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>
	<% if (msg){ %>
	<script>
        document.addEventListener('DOMContentLoaded', ()=>{
            M.toast({
                html: `<i class="material-icons left" style="color:<%= color %>"><%= icon %></i><%= msg %>`, 
                displayLength: 15000
            })
        });
	</script>
	<% } %>
<% include ./partial/footer.ejs %>